<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>cms-core</artifactId>
		<groupId>com.ebay.cloud.cms</groupId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>cms-ui</artifactId>
	<name>cms-ui</name>
	<packaging>pom</packaging>
	<url>http://maven.apache.org</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<plugins>
				<plugin>
					<!-- assamble static content -->
					<artifactId>maven-assembly-plugin</artifactId>
					<configuration>
						<descriptors>
							<descriptor>src/main/assembly/static.xml</descriptor>
							<descriptor>src/main/assembly/war.xml</descriptor>
						</descriptors>
					</configuration>
					<executions>
						<execution>
							<id>make-assembly</id>
							<phase>package</phase>
							<goals>
								<goal>single</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
		</plugins>
	</build>
    <distributionManagement>
    	<repository>
    		<id>cloud.releases</id>
    		<name>cloud.releases</name>
    		<url>http://nxrepository.corp.ebay.com/nexus/content/repositories/cloud.releases/</url>
    	</repository>
    	<snapshotRepository>
    		<id>cloud.snapshots</id>
    		<name>cloud.snapshots</name>
    		<url>http://nxrepository.corp.ebay.com/nexus/content/repositories/cloud.snapshots/</url>
    	</snapshotRepository>
    </distributionManagement>
	
</project>
