<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%5p %d{HH:mm:ss,SSS} %m%n</pattern>
		</encoder>
	</appender>
	<root level="${root-level:-DEBUG}">
		<appender-ref ref="stdout" />
	</root>
</configuration>